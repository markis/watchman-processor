{
  "name": "watchman-processor",
  "version": "0.0.9",
  "description": "Processor for the fb-watchman service",
  "author": "Markis Taylor <m@rkis.cc>",
  "main": "index.js",
  "bin": "./.bin/watchman-processor",
  "preferGlobal": true,
  "dependencies": {
    "chalk": "^1.1.3",
    "fb-watchman": "^1.9.0",
    "node-emoji": "^1.3.0",
    "promise": "^7.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.10.2",
    "istanbul": "^0.4.3",
    "mocha": "^2.5.1",
    "mocha-lcov-reporter": "^1.2.0",
    "pre-commit": "^1.1.3",
    "sinon": "^1.17.4"
  },
  "scripts": {
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "coverage": "istanbul cover _mocha test/_setup.js test/**/*-test.js",
    "mocha": "mocha test/_setup.js test/**/*-test.js",
    "pretest": "eslint src/",
    "test": "npm run coverage"
  },
  "pre-commit": [
    "pretest",
    "coverage"
