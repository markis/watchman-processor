{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es6" ],
    "outDir": "built/",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "chai",
      "chalk",
      "emojify",
      "fb-watchman",
      "mocha",
      "node",
      "sinon"
    ]
  },
  "exclude": [
    "node_modules",
    "built",
    "index.d.ts"
  ]
}