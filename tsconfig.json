{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es6" ],
    "outDir": "built/",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "built",
    "index.d.ts"
  ]
}